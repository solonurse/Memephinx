<%= turbo-stream.replace "question-container question-#{@questions.id}" do %>
  <div class='question-container question-#{@questions.id}'>
    <p>問題</p>
    <%= form_with url: questions_answer_path, class: 'answer' do |f| %>
      <%= f.label :answer, 'ひらがなで入力してください' %>
      <%= f.text_field :answer %>
      <%= f.submit %>
    <% end %>
  </div>
<% end %>